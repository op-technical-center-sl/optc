<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <template id="report_saleorder_document_inherit" inherit_id="sale.report_saleorder_document">
            <xpath expr="//th[@name='th_taxes']" position="replace">
            </xpath>
            <xpath expr="//td[@name='td_taxes']" position="replace">
            </xpath>
            <xpath expr="//h2[@class='mt16']" position="after">
                <div t-if="doc.commitment_date" id="delivery date">
                <span>
                    <strong>Delivery Date:</strong>
                    <br/>
                    <span t-field="doc.commitment_date"/>
                    </span>
                </div>
            </xpath>
            <!-- Quitar las horas del formato de fecha -->
            <xpath expr="//div[@id='informations']//p[@t-field='doc.date_order']" position="attributes">
                <attribute name="t-options-widget">"date"</attribute>
            </xpath>
            <xpath expr="//div[@id='delivery date']//span[@t-field='doc.commitment_date']" position="attributes">
                <attribute name="t-options-widget">"date"</attribute>
            </xpath>

            <!--Ajuste margen izquierdo: NÃºmero del pedido -->
            <xpath expr="//h2[@class='mt16']" position="attributes">
                <attribute name="style" separator=";" add="margin-left:-2px"/>
            </xpath>  
            <!--Ajuste margen izquierdo: Detalle del pedido -->
            <xpath expr="//table[@class='table table-sm o_main_table']" position="attributes">
                <attribute name="style" separator=";" add="margin-left:-4px"/>
            </xpath>   

            <!--Ampliar el ancho del subtotal-->
             <xpath expr="//div[@id='total']" position="replace">
               <div id="total" class="row" name="total">
                    <div t-attf-class="#{'col-5' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                        <table class="table table-sm">
                            <tr class="border-black o_subtotal" style="">
                                <td name="td_amount_untaxed_label" class="text-left"><strong>Subtotal</strong></td>
                                <td name="td_amount_untaxed" class="text-right">
                                    <span t-field="doc.amount_untaxed"/>
                                </td>
                            </tr>
                            <t t-foreach="doc.amount_by_group" t-as="amount_by_group">
                                <tr style="">
                                    <t t-if="amount_by_group[5] == 1 and doc.amount_untaxed == amount_by_group[2]">
                                        <td name="td_amount_by_group_label_3">
                                            <span t-esc="amount_by_group[0]"/>
                                            <span>&amp;nbsp;<span>on</span>&amp;nbsp;<t t-esc="amount_by_group[2]" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.pricelist_id.currency_id}"/></span>
                                        </td>
                                        <td name="td_amount_by_group_3" class="text-right o_price_total">
                                            <span t-esc="amount_by_group[1]" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.pricelist_id.currency_id}"/>
                                        </td>
                                    </t>
                                    <t t-else="">
                                        <td name="td_amount_by_group_label">
                                            <span t-esc="amount_by_group[0]"/>
                                        </td>
                                        <td name="td_amount_by_group" class="text-right o_price_total">
                                            <span t-esc="amount_by_group[1]" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.pricelist_id.currency_id}"/>
                                        </td>
                                    </t>
                                </tr>
                            </t>
                            <tr class="border-black o_total">
                                <td name="td_amount_total_label" class="text-left"><strong>Total</strong></td>
                                <td name="td_amount_total" class="text-right">
                                    <span t-field="doc.amount_total"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
                    
            </xpath>          





        </template>
    </data>
</odoo>