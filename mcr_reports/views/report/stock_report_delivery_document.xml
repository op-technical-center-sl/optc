<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <template id="report_delivery_document_inherit" inherit_id="stock.report_delivery_document" priority="99">
            <xpath expr="//div[@t-esc='partner']" position="before">
                <strong>Delivery Address:</strong>
            </xpath>

            <xpath expr="//div[@t-esc='partner']" position="after">
                <div class="mt-2">
                    <div t-if="partner.code_ice_1">
                        ICE: <span t-field="partner.code_ice_1" />
                    </div>
                    <div t-if="partner.vat">
                        VAT: <span t-field="partner.vat" />
                    </div>
                </div>
            </xpath>

            <xpath expr="//h2" position="before">
                <p t-if="o.sale_id.incoterm">
                    <strong>Incoterm:</strong>
                    <span t-field="o.sale_id.incoterm.name" />
                </p>
                <p t-if="o.sudo().sale_id.client_order_ref">
                    <strong>Customer Reference:</strong>
                    <span t-field="o.sudo().sale_id.client_order_ref" />
                </p>
                <p t-if="o.picking_type_code == 'outgoing'">
                    <strong>Delivery note</strong>
                </p>
            </xpath>

            <xpath expr="//div[@name='div_sched_date']/.." position="inside">
                <div t-if="o.number_of_pallets" class="col-auto" name="div_pallets">
                    <strong>Number of pallets:</strong>
                    <p t-field="o.number_of_pallets" />
                </div>
            </xpath>

            <xpath expr="//table[@name='stock_move_line_table']" position="after">
                <div class="mt-4">Origen UE
                </div>
                <div t-if="o.partner_id.other_info_1">
                    <span t-field="o.partner_id.other_info_1"/>
                </div>
            </xpath>

        </template>
    </data>
</odoo>
